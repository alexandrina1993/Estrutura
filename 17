import math
area = float(input("Digite o tamanho da área a ser pintada (em m²): "))
area_com_folga = area * 1.10
litros_necessarios = area_com_folga / 3
latas_apenas = math.ceil(litros_necessarios / 18)
preco_latas = latas_apenas * 80
galoes_apenas = math.ceil(litros_necessarios / 3.6)
preco_galoes = galoes_apenas * 25
latas_mistura = int(litros_necessarios // 18)
litros_restantes = litros_necessarios - (latas_mistura * 18)
galoes_mistura = math.ceil(litros_restantes / 3.6)
preco_misto = (latas_mistura * 80) + (galoes_mistura * 25)
print("\n--- Opções de Compra ---")
print(f"Área total com 10% de folga: {area_com_folga:.2f} m²")
print(f"Litros de tinta necessários: {litros_necessarios:.2f} L")

print("\n1) Apenas latas de 18 litros:")
print(f"   Quantidade: {latas_apenas} lata(s)")
print(f"   Preço total: R$ {preco_latas:.2f}")

print("\n2) Apenas galões de 3,6 litros:")
